<?xml version="1.0" encoding="utf-8"?>
<!-- Fichier de thèmes et styles pour l'application StudentAgenda -->
<resources>

    <!-- ===================================================== -->
    <!-- 1. THÈMES PRINCIPAUX DE L'APPLICATION -->
    <!-- ===================================================== -->

    <!-- Thème principal avec ActionBar et support DayNight -->
    <style name="Theme.StudentAgenda" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Couleurs primaires de la marque -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryDark">@color/red_800</item>
        <item name="colorPrimaryVariant">@color/red_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Couleurs de fond et surfaces -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>

        <!-- Couleur pour les erreurs -->
        <item name="colorError">@color/error_color</item>

        <!-- Couleur barre de statut et navigation -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Styles des composants MaterialComponents personnalisés -->
        <item name="materialButtonStyle">@style/Widget.StudentAgenda.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.StudentAgenda.Button.Outlined</item>
        <item name="textInputStyle">@style/Widget.StudentAgenda.TextInputLayout.OutlinedBox</item>

        <!-- Styles de texte globaux -->
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.StudentAgenda.TitleLarge</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.StudentAgenda.TitleMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StudentAgenda.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StudentAgenda.BodyMedium</item>
        <item name="textAppearanceButton">@style/TextAppearance.StudentAgenda.Button</item>

        <!-- ActionBar / Toolbar -->
        <item name="actionBarSize">56dp</item>
        <item name="actionBarStyle">@style/Widget.StudentAgenda.ActionBar.Solid</item>

        <!-- CardView -->
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <!-- Thème sans ActionBar -->
    <style name="Theme.StudentAgenda.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- ===================================================== -->
    <!-- 2. STYLES POUR LES COMPOSANTS -->
    <!-- ===================================================== -->

    <!-- Boutons MaterialComponents -->
    <style name="Widget.StudentAgenda.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red_600</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">2dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.StudentAgenda.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/red_600</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- MaterialCardView -->
    <style name="CardView" parent="CardView.Light">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Toolbar / ActionBar -->
    <style name="Widget.StudentAgenda.ActionBar.Solid" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/TextAppearance.StudentAgenda.ActionBarTitle</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.StudentAgenda.TextInputLayout.OutlinedBox"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>


    <!-- ===================================================== -->
    <!-- 3. STYLES DE TEXTE -->
    <!-- ===================================================== -->

    <style name="TextAppearance.StudentAgenda.TitleLarge" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.StudentAgenda.TitleMedium" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.StudentAgenda.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.StudentAgenda.BodyMedium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.StudentAgenda.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.StudentAgenda.ActionBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
