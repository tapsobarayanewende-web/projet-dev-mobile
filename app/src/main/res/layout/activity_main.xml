<?xml version="1.0" encoding="utf-8"?>
<!-- Conteneur principal pour gérer AppBar et contenu défilable -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:contentDescription="@string/main_screen_desc"
    android:background="@color/white">

    <!-- Barre d'application (AppBar) avec MaterialToolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:background="@color/red_600">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red_600"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            app:navigationIcon="?android:attr/homeAsUpIndicator"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenu principal vertical sous l'AppBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/white">

        <!-- Filtres par jour de la semaine -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="@color/white"
            android:contentDescription="@string/day_filters_desc"
            android:focusable="true"
            android:importantForAccessibility="yes">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Boutons de filtre (Tous, Lundi, Mardi...) -->
                <!-- Exemple pour "All" -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:focusable="true"
                    android:clickable="true"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Autres boutons de filtre pour chaque jour -->
                <!-- Lundi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterMonday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Bouton Mardi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterTuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tuesday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Bouton Mercredi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterWednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wednesday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Bouton Jeudi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterThursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thursday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Bouton Vendredi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterFriday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Bouton Samedi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterSaturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saturday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />

                <!-- Bouton Dimanche -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterSunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sunday_short"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginEnd="8dp"
                    android:minHeight="56dp"
                    android:minWidth="64dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:strokeColor="@color/red_600"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp" />








            </LinearLayout>
        </HorizontalScrollView>

        <!-- Barre de recherche avec bouton Clear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Champ de recherche -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/red_600"
                app:boxStrokeColor="@color/red_600"
                app:hintTextColor="@color/red_600"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:minHeight="56dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bouton clear (visible seulement si texte présent) -->
            <ImageView
                android:id="@+id/btnClearSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_clear"
                android:visibility="gone"
                app:tint="@color/red_600"
                android:contentDescription="@string/clear_search" />

        </LinearLayout>

        <!-- Liste des cours -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCourses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            tools:listitem="@layout/item_course"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/courses_list_desc"
            android:background="@color/white" />

        <!-- État vide si aucun cours -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_calendar"
                app:tint="@color/red_600"
                android:contentDescription="@string/calendar_icon_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_courses"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_first_course"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bouton flottant pour ajouter un cours -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_course_button_desc"
        android:importantForAccessibility="yes"
        android:focusable="true"
        android:clickable="true"
        app:tint="@color/white"
        app:backgroundTint="@color/red_700"
        app:elevation="8dp"
        app:maxImageSize="28dp"
        app:rippleColor="@color/red_300"
        app:ensureMinTouchTargetSize="true"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:stateListAnimator="@null" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
